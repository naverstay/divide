        //-| <!--[if gte IE 8]>
        //-| <link rel="stylesheet" type="text/css" href="styles/all-ie-only.css" />
        //-| <![endif]-->
        //-| 
        //-script(src='js/retina.js')
        script(src='js/jquery1.10.js')
        - if (divide_page)
            script(src='js/jquery-ui.js')
            script(src='js/jquery.matchHeight.js')
            script(src='js/swiper.js')
            script(src='js/divide_page.js')
        - if (how_page)
            script(src='js/jquery.fullPage.js')
            script(src='js/how_page.js')
        - if (partners_page)
            script(src='js/jquery.fullPage.js')
            script(src='js/partners_page.js')
        - if (create_page)
            script(src='js/jquery-ui.js')
            script(src='js/create_page.js')

mixin loop_while(counter)
    -i=0;
    while i < counter
        -i++;
        block

